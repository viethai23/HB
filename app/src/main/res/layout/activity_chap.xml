<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChapActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:padding="@dimen/_4sdp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgChap"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_8sdp">
        <TextView
            android:id="@+id/chapTenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:ellipsize="end"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/chapTenTacGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/chapTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chapTheLoai"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:ellipsize="end"
            android:maxLines="3"/>
    </LinearLayout>


</LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chapGioiThieu"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_marginStart="@dimen/_4sdp"
        android:padding="@dimen/_4sdp"
        android:ellipsize="end"
        android:maxLines="8"/>
        <ListView
            android:id="@+id/listChap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
</LinearLayout>